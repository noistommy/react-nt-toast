{
  "name": "react-nt-toast",
  "description": "Toast system context with react",
  "author": "Minyoung Tommy Kim",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "MODE=demo vite",
    "build": "npm run build:code",
    "build:code": "MODE=lib tsc -b && vite build",
    "build:demo": "MODE=demo tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .tsx,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "main": "./dist/nt-toast.umd.js",
  "module": "./dist/nt-toast.es.js",
  "exports": {
    ".": {
      "import": "./dist/nt-toast.es.js",
      "require": "./dist/nt-toast.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "react": "^19.1.1",
    "react-be-ui": "^0.1.2",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "sass": "^1.93.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  }
}
